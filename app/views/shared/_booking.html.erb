<% if current_user.bookings.map(&:mask).include?(@mask) %>
  <p>Nop</p>
<% else  %>
    <%= @booking.errors.full_messages.to_sentence %>
    <%= simple_form_for [@mask, @booking] do |f| %>
    <%= f.input :startdate, as: :date, html5: true %>
    <%= f.input :enddate, as: :date, html5: true %>
    <%= f.submit "submit", class: "btn btn-primary" %>
    <% end %>
<% end %>
