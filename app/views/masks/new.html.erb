<%= simple_form_for [@mask] do |f| %>
  <% if @mask.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @mask.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.input :name %>
  <%= f.input :price %>
  <%= f.input :mood %>
  <%= f.input :location %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit "GIVE", class: "nav-link" %>
<% end %>
