<div class="dark-background">
  <div class="pt-5 d-flex justify-content-center">
      <h1 class="index-title">Choose one face!</h1>
  </div>
  <div class="indexpage-wrapper">
    <div class="row">
      <% @masks.each do |mask| %>
        <div class="col-4 d-flex justify-content-center align-items-center mb-5">
            <figure class="snip1527">
              <div class="image">
                <%= cl_image_tag mask.photo %>
                <div class="date"><span class="day"><%= mask.price %></span><span class="month">DKK</span></div>
              </div>

              <%= link_to mask_path(mask) do %>
                <figcaption>
                  <h3><%= mask.name %></h3>
                  <p><%= mask.location %></p>
                  <p><%= mask.mood %></p>
                </figcaption>
              <% end %>
            </figure>
        </div>
      <% end %>
    </div>
  </div>
</div>
